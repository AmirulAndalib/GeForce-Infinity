{
    "name": "geforce-infinity",
    "version": "0.1.1",
    "main": "dist/main.js",
    "scripts": {
        "lint": "eslint .",
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "tsc && cpx \"src/assets/**/*\" dist/assets",
        "dev": "tsc --watch",
        "start": "npm run build && electron . --trace-warnings",
        "pack": "electron-builder --dir",
        "dist": "electron-builder --win --linux",
        "rebuild": "electron-rebuild",
        "postinstall": "electron-builder install-app-deps"
    },
    "keywords": [],
    "author": {
        "name": "AstralVixen",
        "email": "astral.vixen.hu@gmail.com"
    },
    "license": "MIT",
    "description": "Enhance your GeForce NOW application experience!",
    "devDependencies": {
        "@eslint/css": "^0.9.0",
        "@eslint/js": "^9.30.1",
        "@eslint/json": "^0.12.0",
        "@eslint/markdown": "^6.6.0",
        "@types/discord-rpc": "^4.0.9",
        "@typescript-eslint/eslint-plugin": "^8.36.0",
        "@typescript-eslint/parser": "^8.36.0",
        "copyfiles": "^2.4.1",
        "cpx": "^1.5.0",
        "electron": "^37.2.0",
        "electron-builder": "^26.0.12",
        "electron-rebuild": "^3.2.9",
        "eslint": "^9.30.1",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-react": "^7.37.5",
        "globals": "^16.3.0",
        "prettier": "^3.6.2",
        "shx": "^0.4.0",
        "typescript-eslint": "^8.36.0"
    },
    "dependencies": {
        "discord-rpc": "^4.0.1",
        "electron-updater": "^6.6.2"
    },
    "build": {
        "appId": "net.astralvixen.geforceinfinity",
        "productName": "GeForceInfinity",
        "files": [
            "node_modules/**/*",
            "resources/**/*",
            "src/main.js",
            "src/preload.js",
            "src/assets/infinity-styles.css",
            "src/assets/**",
            "dist/**/*"
        ],
        "extraResources": [
            {
                "from": "resources/",
                "to": "."
            },
            {
                "from": "src/assets",
                "to": "assets",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "directories": {
            "output": "builds"
        },
        "win": {
            "target": [
                "nsis",
                "zip"
            ],
            "artifactName": "${productName}-${version}-${arch}.${ext}",
            "icon": "resources/infinitylogo.png"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm"
            ],
            "artifactName": "${productName}-${version}-${arch}.${ext}",
            "icon": "resources/infinitylogo.png",
            "maintainer": "AstralVixen <astral.vixen.hu@gmail.com>",
            "category": "Game",
            "desktop": {
                "Name": "GeForce Infinity",
                "Comment": "Enhance your GeForce NOW application experience!",
                "GenericName": "GeForceInfinity",
                "Terminal": "false",
                "Type": "Application",
                "StartupNotify": "false",
                "Icon": "/opt/GeForceInfinity/resources/infinitylogo.ico",
                "MimeType": "x-scheme-handler/geforceinfinity"
            }
        },
        "publish": [
            {
                "provider": "github",
                "owner": "AstralVixen",
                "repo": "GeForce-Infinity"
            }
        ]
    }
}
