{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "target": "es2024",
        "module": "Node16",
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules"],
    "include": ["src"],
    "assets": ["src/assets/**/*"]
}
